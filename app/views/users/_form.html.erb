<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Nombre de usuario" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Direccion de correo" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirmar password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit (@user.new_record? ? "Registrarse" : "Actualiar") %></p>
<% end %>
